    <%--Scrpits for date time picker--%>
    <script type="text/javascript">
        $(function () {
            $('.date').datetimepicker();
        });

    </script>
    <%--  Scripts for searchtype toggle button--%>
    <script type="text/javascript">
        $(function () {
            $('#chkSearchType').bootstrapToggle(
                {
                    on: 'Requests',
                    off: 'Offers',
                    onstyle: 'warning',
                    offstyle: 'info'
                }
                );
        });
    </script>
