                        <li class="form-group">
                            <asp:LinkButton ID="lbtnAddReq" runat="server" CssClass="rounded-button blue-button" data-toggle="modal" data-target="#addReqModal"><span class="glyphicon glyphicon-plus-sign"></span> Add Request </asp:LinkButton>
                        </li>
                        <li class="form-group">
                            <asp:LinkButton ID="lbtnAddOffer" runat="server" CssClass="rounded-button blue-button" data-toggle="modal" data-target="#addOfferModal"><span class="glyphicon glyphicon-plus-sign"></span> Add Offer </asp:LinkButton>
                        </li>
